# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /home                            @controllers.PrescriberController.index
GET         /prescription                    @controllers.PrescriberController.newPrescription(patient: Patient)
POST        /patient                         @controllers.PrescriberController.addPatient()
GET         /admin                           @controllers.AdministratorController.adminLogin
GET         /adminhome                       @controllers.AdministratorController.index
GET         /                                @controllers.ApplicationController.index
GET         /signIn                          @controllers.ApplicationController.signIn
GET         /signUp                          @controllers.ApplicationController.signUp
GET         /signOut                         @controllers.ApplicationController.signOut
POST        /authenticate/credentials        @controllers.CredentialsAuthController.authenticate
POST        /user                            @controllers.SignUpController.addUser(userType: String)



# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)
GET         /webjars/*file                   controllers.WebJarAssets.at(file)
